<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <title>@ViewBag.Title - ViaTecnica</title>
</head>
<body>
    <div class="dropdown position-fixed bottom-0 end-0 mb-3 me-3 bd-mode-toggle ">
        <button class="btn btn-bd-primary py-2 dropdown-toggle d-flex align-items-center bg-black" id="bd-theme" type="button" aria-expanded="false" data-bs-toggle="dropdown" aria-label="Toggle theme (dark)">
            <svg class="bi my-1 theme-icon-active" width="1em" height="1em"><i class="moon-stars-fill"></i></svg>
            <span class="visually-hidden" id="bd-theme-text">Toggle theme</span>
        </button>
        <ul class="dropdown-menu dropdown-menu-end shadow" aria-labelledby="bd-theme-text" style="">
            <li>
                <button type="button" class="dropdown-item d-flex align-items-center" data-bs-theme-value="light" aria-pressed="false">
                    <svg class="bi me-2 opacity-50" width="1em" height="1em"><i class="sun-fill"></i></svg>
                    Light
                    <svg class="bi ms-auto d-none" width="1em" height="1em"><i class="check2"></i></svg>
                </button>
            </li>
            <li>
                <button type="button" class="dropdown-item d-flex align-items-center active" data-bs-theme-value="dark" aria-pressed="true">
                    <svg class="bi me-2 opacity-50" width="1em" height="1em"><i class="moon-stars-fill"></i></svg>
                    Dark
                    <svg class="bi ms-auto d-none" width="1em" height="1em"><i class="check2"></i></svg>
                </button>
            </li>
            <li>
                <button type="button" class="dropdown-item d-flex align-items-center" data-bs-theme-value="auto" aria-pressed="false">
                    <svg class="bi me-2 opacity-50" width="1em" height="1em"><i class="circle-half"></i></svg>
                    Auto
                    <svg class="bi ms-auto d-none" width="1em" height="1em"><i class="check2"></i></svg>
                </button>
            </li>
        </ul>
    </div>
    <div >
        <header class="d-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-3 mb-4 border-bottom shadow-sm">
            <div class="col-md-3 mb-2 mb-md-0" style="margin-left: 20px; margin-right: 20px ">
                @Html.ActionLink("ViaTecnica", "Index", "Home", new { area = "" }, new { @class = "bi", @style = "text-decoration: solid;color: black;font-size: x-large;font-style: revert;font-weight: bold;" })
            </div>

            <ul class="nav col-12 col-md-auto mb-2 justify-content-center mb-md-0">
                <li>@Html.ActionLink("Nuevo Turno", "Create", "Turno_Cabecera", new { area = "" }, new { @class = "nav-link px-2 text-dark" })</li>
                <li><a href="#" class="nav-link px-2 text-dark">Ofertas</a></li>
                <li><a href="#" class="nav-link px-2 text-dark">Tarifas</a></li>
            </ul>

            <div class="col-md-3 text-end" style="margin-left: 20px; margin-right: 20px ">
                <button type="button" class="btn btn-outline-dark me-2">Login</button>
            </div>
        </header>


        @RenderBody()
        @*<hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Mi aplicación ASP.NET</p>
        </footer>*@
    </div>
    @RenderSection("scripts", required: false)
</body>
</html>
